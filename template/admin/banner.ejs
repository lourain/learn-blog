<% include ./components/top.inc.ejs %>
<div>
    <form action="?" method="post">
        标题：
        <input type="text" name="title" />
        <br> 描述：
        <textarea name="description"></textarea>
        <br> 链接：
        <input type="text" name="href" />
        <br>
        <input type="submit" value="添加" />
        <br>
    </form>
    <table border="1" width="80%" cellspacing='0'>
        <thead>
            <tr>
                <th>ID</th>
                <th>标题</th>
                <th>描述</th>
                <th>链接</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0;i<banners.length;i++){ %>
                <tr>
                    <td><%=banners[i].ID%></td>
                    <td><%=banners[i].title%></td>
                    <td style="width:500px;"><%=banners[i].description%></td>
                    <td><%=banners[i].href%></td>
                    <td><a href="?act=delete&id=<%=banners[i].ID%>">删除</a> <a href="?act=amend&id=<%=banners[i].ID%>">修改</a></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
<div class="sector"></div>
<div class="test"></div>
<style>
    .sector {
    width: 300px; height: 300px;
    position: absolute;
    clip: rect(0 300px 300px 150px);
    overflow: hidden;
    /* background-color:red; */
}
.sector::after {
    content: '';
    width: 100%; height: 100%;
    background: red;
    position: absolute;
    clip: rect(0 150px 300px 0);
    transform: rotate(30deg);
    border-radius: 50%;
}
.test{
    width: 500px;
    height: 500px;  
    /* background-color: coral; */
    position: absolute;
    top: 500px;
    left: 200px;
    border-radius: 50%;
    clip: rect(0px 500px 500px 250px);
    overflow: hidden;
}
.test::after{
    content: "";
    position: absolute;
    width:500px;   
    height:500px;
    clip:rect(0 250px 500px 0);
    background-color: blue;
    transform: rotate(30deg);
    border-radius:50%;
    overflow: hidden;

}
</style>